{
	"mcpServers": {
		"context7": {
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp"],
			"env": { "DEFAULT_MINIMUM_TOKENS": "" },
			"disabled": false,
			"alwaysAllow": ["resolve-library-id", "get-library-docs"],
			"timeout": 15
		},
		"memory": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-memory"],
			"disabled": false,
			"alwaysAllow": [
				"create_entities",
				"create_relations",
				"add_observations",
				"delete_entities",
				"open_nodes",
				"search_nodes",
				"read_graph",
				"delete_relations"
			],
			"timeout": 60
		}
	}
}
